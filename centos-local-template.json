      ],
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "only": [
        "centos6-64-py",
        "centos7-py"
      ],
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo -iu vagrant {{ .Vars }} {{ .Path }}",
      "script": "scripts/pyenv-install.sh",
      "environment_vars": [
        "PY_VERSIONS={{user `PY_VERSIONS`}}"
      ]
    },
    {
      "type": "shell",
      "execute_command": "sudo bash '{{ .Path }}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/network.sh",
        "scripts/compact.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "surefoot/{{ build_name }}",
        "access_token": "{{ user `ATLAS_TOKEN` }}",
        "version": "{{ user `version` }}-{{ timestamp }}"
      }
    ]
  ]
}

